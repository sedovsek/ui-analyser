#!/bin/sh

# Print usage if needed
if [ $# -lt 1 ] || [ "$1" != "$(echo $1 | egrep --color=none '(start|stop|restart|flush)')" ]
then
    cat <<EOF >&2
Usage: $0 start|stop|restart|flush
    start      Start service
    stop       Stop service
    restart    Restart service
    flush      Delete logs from elasticsearch
EOF
    exit 1
fi

# Run stack
start() {
    # Run elasticsearch 1.1.1
    elasticsearch-1.1.1/bin/elasticsearch -d

    # Run LogStash 1.4.0
    logstash-1.4.0/bin/logstash -f ../config/logstsh.conf

    # Run Kibana4
    cd kibana-3.0.1
    open http://$(ipconfig getifaddr en0):8000 && python -m SimpleHTTPServer

    echo -e "Starting the stackâ€¦"
}

# Stop stack
stop() {
    # Shutdown elasticsearch
    curl -XPOST 'http://localhost:9200/_shutdown'

    # Shutdown LogStash
    # todo
}


if [ $1 == "start" ]; then
    start
fi

# Run Stop
if [ $1 == "stop" ]; then
    stop
fi
    
if [ $1 == "restart" ]; then
    $0 stop
    $1 start
fi

# Flush logs from elasticsearch
if [ $1 == "flush" ]; then
    # Remove tracks where logstash left off with the inputs
    # rm ~/.sincedb_*

    # Deletes from elasticsearch
    curl -XDELETE 'http://localhost:9200/_all'
fi